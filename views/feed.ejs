<!doctype html>
<html>
<head>
    <title>Swift Stone</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-right">
        <img src="img/swift-stone-plain-logo.png" alt="swift stone logo" class="logo">
        <a href="/profile">Profile</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <h3>Posts</h3>
        <div class="col-sm-6 post">

          <ul class="messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message">
              <a href="/post/<%= posts[i]._id %>">
                <h4><%= posts[i].caption %></h4>
                <img src="<%= posts[i].img %>" alt="">
                <a href="/page/<%= posts[i].postedBy %>"><%= posts[i].postedBy %></a>
              </a>
              <span class="hide"><%= posts[i]._id %></span>
              <span><%= posts[i].likes %></span>
              <span><i class="bi bi-heart"></i></span>
            </li>
          <% } %>
          </ul>
        </div>
    </div>
</div>

<script src="main.js"></script>

</body>
</html>
